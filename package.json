{
  "name": "formfiller-schema",
  "version": "5.2.1",
  "description": "Shared schema definitions for FormFiller application with unified expression system, consolidated lookup.dataSource, and Stepper component support",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json",
    "./dist/schemas/complete-schema.json": "./dist/schemas/complete-schema.json",
    "./dist/schemas/*": "./dist/schemas/*",
    "./dist/*": "./dist/*"
  },
  "scripts": {
    "build": "tsc && mkdir -p dist/schemas && npm run generate:schema && npm run transform:schema && npm run generate:monaco",
    "build:legacy": "tsc && mkdir -p dist/schemas && cp src/schemas/*.json dist/schemas/ && npm run transform:schema && npm run generate:monaco",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "generate:schema": "node --loader ts-node/esm scripts/generate-schema.ts",
    "generate:types": "node --loader ts-node/esm scripts/generate-types.ts",
    "generate:docs": "node --loader ts-node/esm scripts/generate-docs.ts",
    "generate:monaco": "node --loader ts-node/esm scripts/generate-monaco-types.ts",
    "transform:schema": "node --loader ts-node/esm scripts/transform-schema.ts",
    "compose:schemas": "node --loader ts-node/esm scripts/compose-schemas.ts",
    "migrate": "node --loader ts-node/esm scripts/migrate-config.ts",
    "validate:all": "node --loader ts-node/esm scripts/validate-all.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "csfixer": "prettier --write src && eslint src --ext .ts --fix",
    "csfixer:check": "prettier --check src && eslint src --ext .ts",
    "release": "./scripts/release.sh",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "form",
    "schema",
    "validation",
    "devextreme"
  ],
  "author": "Vivi and Sam <lowcoders@protonmail.com>",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.1.3",
    "jest-junit": "^16.0.0",
    "json-schema-to-typescript": "^13.1.1",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.4",
    "ts-json-schema-generator": "^2.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  }
}
