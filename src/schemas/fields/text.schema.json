{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "Text Field Configuration",
  "description": "Configuration for text input fields",
  "allOf": [
    {
      "$ref": "../base/common.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "const": "text",
          "description": "Field type identifier"
        },
        "editorOptions": {
          "type": "object",
          "description": "DevExtreme text editor options",
          "properties": {
            "maxLength": {
              "type": "number",
              "description": "Maximum number of characters"
            },
            "mode": {
              "enum": ["text", "email", "password", "search", "tel", "url"],
              "description": "Input mode"
            },
            "mask": {
              "type": "string",
              "description": "Input mask pattern"
            }
          }
        }
      },
      "required": ["type"]
    }
  ]
}

